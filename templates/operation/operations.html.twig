{% extends 'base.html.twig' %}

{% block title %}Operations
{% endblock %}

{% block monTitre %}
	Tous nos service de nettoyage
{% endblock %}

{% block body %}

	<div class="row">
		{% for operation in operations %}
			<div class="col-4">
				<div class="row align-items-center">

					<div class="col-12 cold-md-6 text-center">
						<img src="{{asset('images/' ~ operation.image)}}" class="img-fluid">
					</div>
				</div>
				<div class="col-auto text-center">
					<div>
						<a href="{{path('affichage_operation',{'id': operation.id })}}">{{operation.nom}}</a>
					</div>
					<div>Description:
						{{operation.description}}</div>
					<div>Prix de Service :
						{{operation.prix}}</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
