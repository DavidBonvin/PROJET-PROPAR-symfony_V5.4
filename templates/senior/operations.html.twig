{% extends 'base.html.twig' %}

{% block title %}Dashboard
{% endblock %}


{% block navbarlists %}
	<li class='mt-4'>
		<a href="{{ path('app_senior') }}">Tableau de bord</a>
	</li>
	<li class='mt-4'>
		<a href="{{ path('app_senior_operations') }}">Ajouter une opération</a>
	</li>
	<li class='mt-4'>
		<a href="{{ path('app_liste_operations_senior') }}">Liste mes opérations</a>
	</li>
	<li class='mt-4'>
		<a href="{{ path('app_prise_commande') }}">Ajouter commande client</a>
	</li>
{% endblock %}

{% block main2 %}
<div class="row p-4 mx-auto">
	{% for message in app.flashes('wrong') %}
		<div class="alert alert-danger">
			{{message}}
		</div>
	{% endfor %}
	<table>
		<h2>Liste des opérations en attente</h2>
		<thead>
			<tr>
				<th scope="col">nom de commande</th>
				<th scope="col">date</th>
				<th scope="col">statut</th>
				<th scope="col">nom du client</th>
				<th scope="col">type d' operation</th>
			</tr>
		</thead>
		<tbody>
			{% for commandes in commandeEnAttente %}
				<tr>
					<td>
						{{commandes.nomCommande}}
					</td>
					<td>
						{{ commandes.date|date("d/m/Y") }}</td>
					<td>
						{{commandes.statut}}
					</td>
					<td>
						{{commandes.client.nom}}
					</td>
					<td>
						{{commandes.operation.typeoperation}}
					</td>
					<td>
						<form method="post" class="col" action="{{path('senior_operations',{'id': commandes.id}) }}" onsubmit="return confirm('Voulez-vous vraiment Ajouter la commande ?');">

							<input type="submit" class="btn btn-success" value="ajouter">
						</form>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
</div>
{% endblock %}
