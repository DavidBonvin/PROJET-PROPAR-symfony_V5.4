{% extends 'base.html.twig' %}

{% block title %}Ajouter une opérations
{% endblock %}

{% block navbarlists %}
	<lu>
		<a href="{{ path('app_apprenti') }}">Tableau de bord</a>
		<br/><br/>
		<a href="{{ path('app_apprenti_operations') }}">Ajouter une opération</a>
		<br/><br/>
		<a href="{{ path('apprenti_liste_operations') }}">Lister mes opérations</a>
		<br/><br/>
		
	</lu>

{% endblock %}

{% block main2 %}

	<div class="row p-4 mx-auto">
		<div class="container">
			<div class="row p-2 my-4">
				<div class="col">
					<h4>Listes des commandes</h4>
				</div>
			</div>
		</div>
		{% for message in app.flashes('wrong') %}
			<div class="alert alert-danger">
				{{message}}
			</div>
		{% endfor %}
		{% for message in app.flashes('successs') %}
			<div class=" alert alert-success">
				{{message}}
			</div>
		{% endfor %}
		<table class="table">
			<thead>
				<tr>
					<th scope="col">nom de commande</th>
					<th scope="col">date</th>
					<th scope="col">statut</th>
					<th scope="col">nom du client</th>
					<th scope="col">type d' operation</th>
				</tr>
			</thead>
			<tbody>
				{% for commandes in commandeEnAttente %}
					<tr>
						<td>
							{{commandes.nomCommande}}
						</td>
						<td>
							{{ commandes.date|date("d/m/Y") }}</td>
						<td>
							{{commandes.statut}}
						</td>
						<td>
							{{commandes.client.nom}}
						</td>
						<td>
							{{commandes.operation.typeoperation}}
						</td>
						<td>
							<form method="post" class="col" action="{{path('apprenti_operations',{'id': commandes.id}) }}" onsubmit="return confirm('Voulez-vous vraiment Ajouter la commande ?');">

								<input type="submit" class="btn btn-success" value="ajouter">
							</form>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
