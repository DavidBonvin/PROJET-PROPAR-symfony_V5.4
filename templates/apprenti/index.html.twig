{% extends 'base.html.twig' %}

{% block title %}Dashboard
{% endblock %}


{% block navbarlists %}
	<li class='mt-4'>
		<a href="{{ path('app_apprenti') }}">Tableau de bord</a>
	</li>

	<li class='mt-4'>
		<a href="">Ajouter une opération</a>
	</li>
	<li class='mt-4'>
		<a href="">Liste mes opérations</a>
	</li>
	<li class='mt-4'>
		<a href="{{ path('app_prise_commande_apprenti') }}">Ajouter commande client</a>
	</li>

{% endblock %}

{% block main2 %}

	<table>
		<h2>Opérations en cours</h2>

		<thead>
			<tr>
				<th scope="col">nom de commande</th>
				<th scope="col">date</th>
				<th scope="col">statut</th>
				<th scope="col">nom du client</th>
				<th scope="col">type d' operation</th>
				<th scope="col">nom de l'employé</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				{% for commandes in commandeEnCours %}
					<td>
						{{commandes.nomCommande}}
					</td>
					<td>
						{{ commandes.date|date("d/m/Y") }}</td>
					<td>
						{{commandes.statut}}
					</td>
					<td>
						{{commandes.client.nom}}
					</td>
					<td>
						{{commandes.operation.typeoperation}}
					</td>
					<td>
						{{commandes.user.nom}}
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
