{% extends 'base.html.twig' %}

{% block title %}Mes Opérations
{% endblock %}

{% block navbarlists %}
	<lu>
		<a href="{{ path('app_apprenti') }}">Tableau de bord</a>
		<br/><br/>
		<a href="{{ path('app_apprenti_operations') }}">Ajouter une opération</a>
		<br/><br/>
		<a href="{{ path('apprenti_liste_operations') }}">Lister mes opérations</a>
		<br/><br/>
		<a href="{{ path('app_prise_commande_apprenti') }}">Ajouter commande client</a>
		<br/><br/>
	</lu>

{% endblock %}

{% block main2 %}
	<!-- Row general Main2 -->
	<div class="row p-4" id="rowMain2General">
		
		<!-- container list en cours  up -->
		<div class="col-12" id="colMain2General-up1">
			<div class="titleLists"></div>
			<!-- Container  title et contenu -->
			<div class="container" id="Container_fondo_lists">
				<div class="row" id="row_title_expert">
					<h4 class="subtitle1">Mes Opérations</h4>
				</div>
				<div class="row " id="row_List_elemente">
					<div class="contListElement">
						<div class="row rolistelement">
						{% for commandes in commandeProfil %}
							<div class="col-12 elementosLists">
							
									<div class="container container2">
										
										<div class="row row2">
											<div class="col-1 divNcNc">
												<div class="idCommande">{{commandes.id}}</div>
												<div></div>
											</div>
											<div class="col-5 divNcNc">
												<div class="nomCommande">{{commandes.nomCommande}}</div>
												<div class="nomClient">{{commandes.client.nom}}</div>
											</div>
											<div class="col-3 divNcNc">
												<div>{{commandes.operation.typeoperation}}</div>
												<div class="divDate2">{{ commandes.date|date("d/m/Y") }}</div>
											</div>
											<div class="col-3 btnTerminer">
												{% if commandes.statut == "Terminer" %}
							<a href="{{path('afficherCommande',{'id':commandes.id})}}" class="btn btn-primary">PDF</a>
						{% endif %}
											</div>
										</div>
										
									</div>
								
							</div>
							{% endfor %}

						</div>
					</div>

				</div>
			</div>

		</div>
		<!-- container table down  -->
		<div class="col-12" id="colMain2General-down1">
			<div class="titleLists">
				<h5></h5>
			</div>


		</div>

	</div>
{% endblock %}