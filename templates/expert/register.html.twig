{% block main2 %}
	<div class="container cadre col-10 row p-4 mt-4">
		<h4>Ajouter un employé</h4>
		{{ form_start(registrationForm) }}
		<div class="row">
			
			<div class="col-6">{{ form_row(registrationForm.nom)}}</div>
			<div class="col-6">{{ form_row(registrationForm.prenom)}}</div>
			<div class="col-6">{{ form_row(registrationForm.email)}}</div>
			<div class="col-6">{{ form_row(registrationForm.uuid,{
            "attr":{"placeholder":"Saisir votre login"},
            "label":"Votre Login"
    })}}</div>
			<div class="col-12">{{ form_row(registrationForm.password, {
            label: 'Password'
        })}}</div>
			<div class="col-6">{{ form_row(registrationForm.roles)}}</div>
			<div class="col-12">{{ form_row(registrationForm.agreeTerms) }}</div>
			
			<div class="col-12">
				<button type="submit" class="btn btn-primary">Ajouter</button>
			</div>
			{{ form_end(registrationForm) }}
		</div>


	</div>
{% endblock %}
