{% block main2 %}
	
		<div class="row p-4 mx-auto">
			<div class="container">
				<div class="row p-2 my-4">
					<div class="col">
						<h4>Lists des employées</h4>
					</div>
				</div>
			</div>
			{% for message in app.flashes('success') %}
				<div class="alert alert-success">
					{{message}}
				</div>
			{% endfor %}
			<table class="table">
				<thead>
					<tr>
						<th scope="col">ID</th>
						<th scope="col">Nom</th>
						<th scope="col">Prenom</th>
						<th scope="col">Email</th>
						<th scope="col">Role</th>
					</tr>
				</thead>
				<tbody>
					{% for employe in employe %}
						<tr>
							<th scope="row">{{ employe.id }}</th>
							<td>{{ employe.nom }}</td>
							<td>{{ employe.prenom }}</td>
							<td>{{ employe.email }}</td>
							<td>{{ employe.roles[0] }}</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
	</div>
{% endblock %}
