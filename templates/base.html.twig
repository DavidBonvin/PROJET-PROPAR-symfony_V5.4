<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="icon" type="image/x-con" href="{{asset('images/propar/Propar3.ico')}}">
		<link rel="stylesheet" href="https://bootswatch.com/5/yeti/bootstrap.min.css"> {% block stylesheets %}{% endblock %}


		</head>
		<body>

			<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
				<div class="container-fluid">
					<a class="navbar-brand" href="{{path('operations')}}"><img src={{asset('images/propar/Propar3.ico')}} height="50"></a>
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
					<ul class="navbar-nav me-auto">
						<li class="nav-item">
							<a class="nav-link active" href="{{path('app_home')}}">Nos Services

							</a>
						</li>
						{% if is_granted('ROLE_ADMIN')%}
						<li class="nav-item">
							<a class="nav-link" href="{{path('admin_operation')}}">Administration</a>
						</li>
						{% endif %}

						{% if not app.user %}
						<li class="nav-item">
							<a class="nav-link" href="{{path('inscription')}}">Inscription</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{path('app_login')}}">Login</a>
						</li>
						 {% else %}
						<li class="nav-item">
							<a class="nav-link" href="{{path('app_logout')}}">Logout</a>
						</li>
						{% endif %}
						
					</nav>
					<div class="container" id="peremain2">
						<div class="row p-4"  >
                            {% block main2 %} 
			
							
                            {% endblock %}
						</div>
					</div>
				</div>
			</div>
		</div>
		{% block body %}{% endblock %}
		{% block javascripts %}{% endblock %}
		<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.min.js" integrity="sha384-7VPbUDkoPSGFnVtYi0QogXtr74QeVeeIs99Qfg5YCF+TidwNdjvaKZX19NZ/e6oz" crossorigin="anonymous"></script>
	</body>
