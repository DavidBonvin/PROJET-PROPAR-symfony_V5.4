<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous"> {% block stylesheets %}{% endblock %}
		{#Link css #}
		<link rel="stylesheet" href="{{asset('asset/css/style.css')}}">
	</head>
	<body>
		<div class="container-fluid">
			<div class="row">
				<div class="col-3 px-0 bg-ligth position-fixed" id="sticky-sidebar">
					<div class="sidevarstatic p-4">
						{#Contenu du sidebar lateral#}
						<img class="logo" src="{{asset('asset/img/logo.svg')}}" alt="">
						<ul class="listLateral">
							{% block navbarlists %} 
			
                            {% endblock %}				
						</ul>
					</div>
				</div>
			
		
				{#Contenu du 70% restent#}
		<div class="col offset-3 p-0 " id="main">
				<nav class="navbar " id="navbartop">
				
							{% block navbarbase %} 
									{% if app.user %}
									<a style="color: white; margin-left: 1%">
										Connecté : {{ app.user.userIdentifier }} 
									</a>
										<a href="{{ path('app_logout') }}" style="margin-right: 1%">Déconnexion</a>
									{% else %}
										<a style="color: white; margin-left: 1%" href="{{ path('app_login') }}" role="button">Se connecter</a>
									{% endif %}
							{% endblock %}
				</nav>

					<div class="row p-4" id="peremain2">
                            {% block main2 %} 
			
							
                            {% endblock %}
					</div>
					</div>
		</div>
</div>
		{% block javascripts %}{% endblock %}
		<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.min.js" integrity="sha384-7VPbUDkoPSGFnVtYi0QogXtr74QeVeeIs99Qfg5YCF+TidwNdjvaKZX19NZ/e6oz" crossorigin="anonymous"></script>
	</body>
</html>
