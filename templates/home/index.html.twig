							{{ commandes.date|date("d/m/Y") }}</td>
						<td>
							{{commandes.statut}}
						</td>
						<td>
							{{commandes.client.nom}}
						</td>
						<td>
							{{commandes.operation.typeoperation}}
						</td>
						<td>
							{{commandes.user.nom|default('')}}
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
